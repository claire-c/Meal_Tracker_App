<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/selectDatesTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:text="@string/title_select_dates"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/dateFromEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/dateToEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/selectDatesTextViewId"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/selectDatesButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="136dp"
        android:text="Button" />

</RelativeLayout>